export GIT_EDITOR='emacs -nw'

alias ctree='tree -C'
alias ssh='ssh -X'
alias lll='ll -tr'

mkcd () {
    mkdir -p $1
    cd $1
}

# homebrew (I'd rather run these important commands manually)
# `brew update` + `brew_upgrade`
export HOMEBREW_NO_AUTO_UPDATE=1
# `brew cleanup`
export HOMEBREW_NO_INSTALL_CLEANUP=1
